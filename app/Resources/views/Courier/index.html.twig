{% extends "admin.html.twig" %}

{% block title %}{{ 'courier.courier'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'courier.courier'|trans }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-md-12 show-grid timeline-title">
                    <a class="btn btn-primary" href="{{ path('admin_add_courier') }}">{{ 'courier.add'|trans }}</a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="50">ID</th>
                                <th>{{ knp_pagination_sortable(pagination, 'courier.name'|trans, 'c.name') }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for courier in pagination %}
                                <tr>
                                    <td>{{ courier.id }}</td>
                                    <td>{{ courier.name }}</td>
                                    <td>
                                        <a class="btn btn-default btn-xs" data-toggle="tooltip" title="{{ 'courier.edit'|trans }}" href="{{ url('admin_edit_courier',{'id': courier.id}) }}">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                        <a class="btn btn-default btn-xs delete" data-toggle="tooltip" title="{{ 'courier.delete'|trans }}" href="{{ url('admin_delete_courier',{'id': courier.id}) }}">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="3" align="center">{{ 'courier.not_found'|trans }}</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="navigation text-right">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}